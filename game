from pysinewave import SineWave
from time import sleep
from random import randrange
pitches = ['c', 'c/', 'c#', 'dd', 'd', 'd/', 'd#', 'ed', 'e', 'e/', 'f', 'f/', 'f#', 'gd', 'g', 'g/', 'g#', 'ad', 'a', 'a/', 'a#', 'bd', 'b']
score = 0
print('Enter "stop" whenever you would like to stop playing')
while True:
    print(f'For accidentals: use "/" for half sharp, "#" for sharp, "d" for half flat, do not use regular flats')
    print(f'Your current score is {score}')

    # Finding a random pitch in the "pitches" list
    a = randrange(0,22)
    randpitch = pitches[a]
    #print(randpitch)

    # Setting "a" to be the correct number to play the corresponding pitch found in the "pitches" list
    a /=2
    sine = SineWave(pitch=a)

    # Playing the pitch
    print('Playing pitch')
    sine.play()
    sleep(5)
    sine.stop()

    guess = input('What was that pitch? ')
    print()
    if guess.lower() == 'stop':
        print('Thank you for playing!')
        break
    elif guess.lower() == randpitch:
        print(f'You win!! The correct pitch was {randpitch}')
        score += 1
    else:
        print(f'Sorry! The correct pitch was {randpitch}')
        score = 0
